---
const currentPath = Astro.url.pathname;
---

<header>
  <div class="headline-container">
    <div>
      <img
        src="/SPD_Rose_rot-frei_RGB.png"
        alt="SPD Rose rot"
        class="headline-container__rose"
      />
    </div>
    <div class="headline-container__text">
      <h2>Truels Reichardt</h2>
      <p>...für Dich nach Berlin!</p>
    </div>
  </div>
  <div class="nav">
    <div class="menu-icon">
      <input id="navbar-toggle" name="navbar-toggle" type="checkbox" />
      <label for="navbar-toggle" class="navbar-toggle-handler">
        <div class="menu-icon-bar__container">
          <div class="menu_icon_bar line-top"></div>
          <div class="menu_icon_bar line-center"></div>
          <div class="menu_icon_bar line-bottom"></div>
        </div>
        <span class="sr-only"> Klicken, um Menu zu öffnen </span>Menü
      </label>
    </div>
  </div>
  <nav id="navbar">
    <menu>
      <li>
        <a class={`header-nav-link ${currentPath === "/" ? "active" : ""}`} href="/">Startseite</a>
      </li>
      <li>
        <a class={`header-nav-link ${currentPath === "/ueber-mich/" ? "active" : ""}`} href="/ueber-mich/">Über mich</a>
      </li>
      <li>
        <a class={`header-nav-link ${currentPath === "/motivation/" ? "active" : ""}`} href="/motivation/">Meine Motivation</a>
      </li>
      <li>
        <a class={`header-nav-link ${currentPath === "/themen/" ? "active" : ""}`} href="/themen/">Meine Themen</a>
      </li>
      <li>
        <a class={`header-nav-link ${currentPath === "/kontakt/" ? "active" : ""}`} href="/kontakt/">Kontakt</a>
      </li>
    </menu>
  </nav>
</header>

<style>
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }
  header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 100px;
  }
  .headline-container {
    display: flex;
    justify-content: space-around;
    align-items: center;
    height: 62px;
    color: var(--red);
    padding: 16px;
  }
  .headline-container__text {
    padding: 0;
    text-align: right;
  }
  .headline-container__text > h2 {
    margin: 0;
  }
  .headline-container__text > p {
    margin-top: 0;
  }
  .headline-container__rose {
    width: 60px;
    height: 60px;
  }
  .nav {
    background-color: var(--red);
    color: var(--white);
    height: 48px;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .menu_icon {
    position: absolute;
    right: 15px;
    top: 50%;
    display: block;
    transform: translateY(-50%);
    padding: 6px 6px;
    display: flex;
  }
  .menu_icon_bar {
    background-color: var(--white);
    height: 2px;
    width: 25px;
    transition: transform 150ms;
    margin: 6px 6px;
  }

  #navbar-toggle {
    all: unset;
    position: absolute;
    width: 30px;
    height: 30px;
    cursor: pointer;
    display: flex;
  }

  .navbar-toggle-handler {
    display: flex;
    align-items: center;
  }

  .menu-icon-bar__container {
    display: block;
  }

  #navbar-toggle:checked
    ~ .navbar-toggle-handler
    > .menu-icon-bar__container
    > .line-top {
    transform: translateY(400%) rotate(45deg);
  }

  #navbar-toggle:checked
    ~ .navbar-toggle-handler
    > .menu-icon-bar__container
    > .line-center {
    opacity: 0;
  }

  #navbar-toggle:checked
    ~ .navbar-toggle-handler
    > .menu-icon-bar__container
    > .line-bottom {
    transform: translateY(-400%) rotate(-45deg);
  }

  body:has(#navbar-toggle:checked) {
    overflow: hidden;
  }

  #navbar {
    display: none;
    position: absolute;
    top: 140px;
    left: 0;
    background-color: var(--red);
    width: 100%;
    height: 100vh;
    border-top: 1px solid var(--white);
    animation: fadeInLeft 0.5s ease;
  }

  menu {
    padding-top: 24px;
    display: flex;
    flex-direction: column;
    gap: 30px;
    padding-left: 0;
  }
  .active {
    color: var(--red) !important;
    font-family: 'SPD The Sans Bold';
  }
  li {
    list-style-type: none;
    list-style-position: inside;
    display: flex;
    justify-content: center;
    padding: 0;
  }
  .header-nav-link {
    text-decoration: none;
    background-color: var(--white);
    color: var(--primary);
    font-size: 1.2rem;
    padding: 16px;
    border-radius: 16px;
    width: 200px;
    text-align: center;
  }
  @media screen and (min-width: 1275px) {
    .menu_icon,
    #navbar-toggle,
    .navbar-toggle-handler,
    .navbar-toggle-handler > .sr-only {
      display: none;
    }
    .header {
      display: flex;
      justify-content: space-evenly;
      align-items: center;
      opacity: 1 !important;
      overflow-x: hidden;
    }
    .header-nav-link {
      font-size: 1.1rem;
      transition: all 250ms;
      padding: 8px;
      text-align: center;
      min-width: 180px;
    }
    .header-nav-link:hover {
      background-color: var(--white);
    }
    #navbar {
      position: relative;
      top: 0;
      display: flex;
      height: fit-content;
      animation: none;
    }
    menu {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr 1fr;
      gap: 24px;
      padding-top: 0;
    }
  }
  @media screen and (max-height: 580px, max-width: 1275px) {
    #navbar {
      overflow-y: scroll;
      height: calc(100vh - 80px);
    }
  }

  @keyframes fadeInLeft {
    0% {
      opacity: 0;
      transform: translateX(-200px);
    }
    100% {
      opacity: 1;
      transform: translateX(0);
    }
  }
</style>

<script>
  const input = document.querySelector("#navbar-toggle") as HTMLInputElement;
  const navBar = document.querySelector("#navbar") as HTMLElement;

  document.addEventListener("change", toggleMenu);

  function toggleMenu() {
    input!.checked
      ? (navBar!.style.display = "block")
      : (navBar!.style.display = "none");
  }
</script>
